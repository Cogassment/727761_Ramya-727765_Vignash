@model RlgBilling.Models.BillingModel

@{
    /**/

    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    @*<script src="~/Scripts/jquery-1.10.2.js"></script>*@
    <script type="text/javascript">

